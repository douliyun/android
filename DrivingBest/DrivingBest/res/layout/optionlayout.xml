<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAF0E6"
    >
    <LinearLayout 
        android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:paddingLeft="50px" 
		android:paddingTop="30px"
		android:paddingRight="50px" 
		android:scrollbars="vertical">
		<CheckBox
			android:id="@+id/chk_autocheck"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="20dp"
			android:textColor="#000000"
			android:text="自动确认"/>
			
		<CheckBox
			android:id="@+id/chk_auto2next"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="20dp"
			android:text="答对后自动跳转下一题"/>
			
		<CheckBox
			android:id="@+id/chk_auto2addWAset"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:textSize="20dp"
			android:layout_height="wrap_content"
			android:text="错题自动加入我的错题库"/>	
			
		<CheckBox
			android:id="@+id/chk_sound"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="20dp"
			android:text="开启声音"/>	

				
				
	</LinearLayout>
	
	<LinearLayout 
	    android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:gravity="bottom">
		<Button android:id="@+id/btn_savesetting" 
		    android:layout_width="160px"
			android:layout_height="wrap_content" 
			android:text="保存"
			android:textColor="#000000"
			android:textSize="25pt"/>
		<Button android:id="@+id/btn_return" 
		    android:layout_width="160px"
			android:layout_height="wrap_content" 
			android:text="返回"
			android:textColor="#000000"
			android:textSize="25pt"/>
	</LinearLayout>
</LinearLayout>
